#!/bin/bash
# Shared environment variables for both bash and zsh
# This file is sourced by both ~/.bashrc and ~/.zshrc

# Editor preference
export EDITOR=nvim
export VISUAL=nvim

# Path additions
export PATH="$HOME/.local/bin:$PATH"
export PATH="$HOME/.fzf/bin:$PATH"

# History settings (works for both shells)
export HISTSIZE=100000
export SAVEHIST=100000

# Tool configurations
export FZF_DEFAULT_COMMAND='fd --type f --strip-cwd-prefix --hidden'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_ALT_C_COMMAND='fd --type d --strip-cwd-prefix --hidden'
export FZF_DEFAULT_OPTS='--height 40% --layout=reverse --border --preview "bat --color=always --style=header,grid --line-range :300 {}"'

# ripgrep configuration
export RIPGREP_CONFIG_PATH="$HOME/.ripgreprc"

# Less pager colors
export LESS_TERMCAP_mb=$'\e[1;32m'
export LESS_TERMCAP_md=$'\e[1;32m'
export LESS_TERMCAP_me=$'\e[0m'
export LESS_TERMCAP_se=$'\e[0m'
export LESS_TERMCAP_so=$'\e[01;33m'
export LESS_TERMCAP_ue=$'\e[0m'
export LESS_TERMCAP_us=$'\e[1;4;31m'